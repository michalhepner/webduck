{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/json-formatter/0.7.0/json-formatter.min.css" integrity="sha256-f+uWA1e4T9wJxyy2jVndIohpOGdGKDBWee1iqtxFv50=" crossorigin="anonymous" />
    <style>
        .icon {
            width: 34px;
            height: 34px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/json-formatter/0.7.0/json-formatter.min.js" integrity="sha256-rz4zpMyR7zixjdwYEHs8inQ18rNZK0qJt5TN/UvKuQA=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        (function ($) {
            $(function () {
                $('.collapse').collapse();
            });
        })(jQuery);
    </script>
{% endblock %}

{% block body %}
    <div class="bg-dark text-white py-4 mb-5">
        <div class="container">
            <h1>
                <i class="far fa-check-square mr-2"></i>
                Site audit {{ site }}
            </h1>
        </div>
    </div>
    <div class="container">
        <ul class="list-unstyled">
            {% for url, urlAudits in audits %}
                <li>
                    <div class="p-3 mb-3 bg-light border shadow-sm">
                        {% if screenshots[url] %}
                            <a class="btn btn-success btn-sm rounded-circle mr-1" data-toggle="collapse" href="#screenshot-{{ url|md5 }}" role="button" aria-expanded="false">
                                <i class="fas fa-image"></i>
                            </a>
                        {% endif %}
                        <a href="{{ url }}" target="_blank">
                            <span class="btn btn-secondary btn-sm rounded-circle mr-1">
                                <i class="fas fa-link"></i>
                            </span>
                            <span class="text-dark">{{ url }}</span>
                        </a>
                        {% if urlAudits|length == 0 %}
                            <i class="ml-2 fas fa-check-circle text-success"></i>
                        {% endif %}
                    </div>
                    {% if screenshots[url] %}
                        <div class="collapse show" id="screenshot-{{ url|md5 }}">
                            <img class="my-2 img-fluid" src="data:image/jpeg;base64,{{ screenshots[url] }}"/>
                        </div>
                    {% endif %}
                    {% if urlAudits|length > 0 %}
                        <ul class="list-unstyled bg-white p-3 my-3 border shadow-sm">
                            {% for urlAuditKey, urlAudit in urlAudits %}
                                <li class="my-2 audit">
                                    {% if urlAudit.resolution == 'warning' %}
                                        <i class="small bg-dark p-2 fas fa-exclamation-triangle text-warning"></i>
                                    {% elseif urlAudit.resolution == 'error' %}
                                        <i class="small bg-danger p-2 fas fa-exclamation-circle text-white"></i>
                                    {% endif %}
                                    <strong>{{ urlAudit.name }}:</strong>
                                    <span class="text-muted">{{ urlAudit.message }}</span>
                                    <a class="btn btn-primary btn-sm rounded-circle float-right" data-toggle="collapse" href="#info-{{ url|md5 }}-{{ urlAuditKey }}" role="button" aria-expanded="false">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <div class="collapse show" id="info-{{ url|md5 }}-{{ urlAuditKey }}">
                                        <pre class="collapse pre-scrollable bg-dark text-white p-3 mt-2">{{ urlAudit.data|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
